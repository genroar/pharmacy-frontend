{
  "appId": "com.zapeera",
  "productName": "Zapeera",
  "copyright": "Copyright Â© 2024 Zapeera",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "public",
      "to": "public"
    },
    {
      "from": "../backend-pharmachy/dist",
      "to": "backend/dist",
      "filter": ["**/*"]
    },
    {
      "from": "../backend-pharmachy/node_modules",
      "to": "backend/node_modules",
      "filter": ["**/*"]
    },
    {
      "from": "../backend-pharmachy/package.json",
      "to": "backend/package.json"
    },
    {
      "from": "../backend-pharmachy/prisma",
      "to": "backend/prisma",
      "filter": ["**/*"]
    },
    {
      "from": "../backend-pharmachy/.env",
      "to": "backend/.env",
      "filter": ["**/*"]
    },
    {
      "from": "../backend-pharmachy/.env.example",
      "to": "backend/.env.example",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icons/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "publisherName": "Zapeera"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64"]
      }
    ],
    "icon": "public/icons/icon.icns",
    "category": "public.app-category.medical",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "electron/entitlements.mac.plist",
    "entitlementsInherit": "electron/entitlements.mac.plist"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220,
        "type": "file"
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    },
    "iconSize": 128,
    "iconTextSize": 14,
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/icons/icon.png",
    "category": "Medical",
    "desktop": {
      "Name": "Zapeera",
      "Comment": "Pharmacy Management POS System",
      "Categories": "Medical;Office;"
    }
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Zapeera",
    "installerIcon": "public/icons/icon.ico",
    "uninstallerIcon": "public/icons/icon.ico",
    "installerHeaderIcon": "public/icons/icon.ico",
    "deleteAppDataOnUninstall": false,
    "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
    "warningsAsErrors": false
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  }
}
